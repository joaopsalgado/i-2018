package serealize;

import java.io.*;
import java.io.ObjectOutputStream;
import serealize.Serealize.Dados;



 
/*  @author JoaoPedroSalgado
*/

public class Serealize{


    public static void main(String[] args) throws IOException {
        Dados dd = new Dados();
        dd.nome = "joao";
        dd.idade = 20;
        dd.escolaridade = "EnsinoSuperior";
        gravarDados(dd);

    }

    public static class Dados {
        String nome;
        int idade;
        String escolaridade;
    }

    private static void gravarDados(Object s) throws IOException {
      
        try (ObjectOutputStream oos = new ObjectOutputStream(new ByteArrayOutputStream())) { 
            oos.writeObject(s);
            oos.close();
        }
    }
    
}
